<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shalom.materialuilabwork">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_my_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_my_app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CocktailsActivity"
            android:label="@string/cocktails"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".PizzaActivity"
            android:label="@string/pizzas"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PastaActivity"
            android:label="@string/pasta"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DessertActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>